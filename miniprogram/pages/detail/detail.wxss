/* pages/detail/detail.wxss */
.detailContainer{
  display: flex;
  flex-direction: column;
}
.detailContainer image{
  width:100%;
  height:520rpx;
}
.avatar_data{
  padding:10rpx;
}
.avatar_data image{
  width:70rpx;
  height:70rpx;
  border-radius: 35rpx;
  vertical-align: middle;
}
.avatar_data text{
  font-size: 28rpx;
}
.author{
  font-size: 32rpx;
  font-weight: bold;
  padding-left:10rpx;
}
.collection_share_container{
  position: relative;
}
.collection_share{
  float: right;
  margin-right: 50rpx;
}
 .collection_share image{
  width:90rpx;
  height:90rpx;
  margin-right: 20rpx;
}
.line{
  width:90%;
  height: 1rpx;
  background-color: #eee;
  position: absolute;
  top:45rpx;
  left:5rpx;
  z-index: -1;
}
.content{
  margin-top: 20rpx;
  font-size: 32rpx;
  text-indent: 32rpx; 
}
.detailContainer{
  position: relative;
}
.detailContainer image.musicImg{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top:260rpx;
  left:50%;
  transform: translate(-50%,-50%);
}